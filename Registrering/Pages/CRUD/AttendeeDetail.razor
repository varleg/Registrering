@using Registrering.Models
@using Registrering.Services
@inject IAttendeeService service

<div class="modal" tabindex="-1" role="dialog" id="attendeeModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">attendee Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <EditForm Model="@attendeeObject" OnValidSubmit="@HandleValidSubmit">
                    <div class="form-group">
                        <label for="attendeeName">Hjemmegruppe</label>
                        <input type="hidden" @bind-value="@attendeeObject.Id" />
                        <InputText id="name" class="form-control" @bind-Value="@attendeeObject.Name" />
                    </div>
                    <div class="form-group">
                        <label for="dueDate">Clean Dato</label>
                        <input type="date" id="addition" name="math" max=@DateTime.Today.ToString("yyyy-MM-dd") @bind-value="@attendeeObject.SpecialDate" />
                    </div>
                    <div class="form-group">
                        <label for="status">Overnatting</label>
                        <InputSelect id="Summary" class="form-control"
                                     @bind-Value="attendeeObject.Accomodation">
                            <option value="" disabled>Skal du overnatte?</option>
                            <option value="true">
                                Ja
                            </option>
                            <option value="false">
                                Nei
                            </option>
                        </InputSelect>
                    </div>
                    <button type="submit" class="btn btn-primary">Registrer</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Avbryt</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public Attendee attendeeObject { get; set; }
    private async void HandleValidSubmit()
    {

    }
}
